extends _layout

block content
  include _nav

  #section-menu(class="section photo")
    .row.top-row
      .col-lg-10.col-md-8.col-sm-6.col-xs-3
        h1.title Menu
        .row.middle-row
          .col-md-8.col-md-offset-0
            #carousel-menu.carousel.slide(data-ride="carousel")
              ol.carousel-indicators
                li.active(data-target="#carousel-menu" data-slide-to="0")
                li(data-target="#carousel-menu" data-slide-to="1")
                li(data-target="#carousel-menu" data-slide-to="2")
                li(data-target="#carousel-menu" data-slide-to="3")
                li(data-target="#carousel-menu" data-slide-to="4")
                li(data-target="#carousel-menu" data-slide-to="5")

              div(class="carousel-inner")
                div(class="item active")
                  img(src="/public/images/Menu/2018/11/Christmas.png")
                div(class="item")
                  img(src="/public/images/Menu/2018/11/breakfast.png")
                div(class="item")
                  img(src="/public/images/Menu/2018/11/brunch.png")
                div(class="item")
                  img(src="/public/images/Menu/2018/11/lunch.png")
                div(class="item")
                  img(src="/public/images/Menu/2018/04/veganVeggie.png")
                div(class="item")
                  img(src="/public/images/Menu/2018/04/drinks.png")
                div(class="item")
                  img(src="/public/images/Menu/2018/11/sundayLunch.png")
                div(class="item")
                  img(src="/public/images/Menu/2017/05/Kids.png")

                a(class="left carousel-control" href="#carousel-menu" role="button" data-slide="prev")
                span(class="glyphicon glyphicon-chevron-left")
                a(class="right carousel-control" href="#carousel-menu" role="button" data-slide="next")
                span(class="glyphicon glyphicon-chevron-right")
                div(class="col-md-4")
                  p.download-box
                    a(href="img/Menu/pdf/2018/11/breakfast.pdf" target="_blank" title="Download the Breakfast Menu")
                      i.fa(class="fa-download") Breakfast
                    a(href="img/Menu/pdf/2018/11/brunch.pdf" target="_blank" title="Download the Brunch Menu")
                      i.fa(class="fa-download") Brunch
                    a(href="img/Menu/pdf/2018/11/lunch.pdf" target="_blank" title="Download the Lunch Menu")
                      i.fa(class="fa-download") Lunch
                    a(href="img/Menu/pdf/2018/04/veganVeggie.pdf" target="_blank" title="Download the Vegetarian/Vegan Menu")
                      i.fa(class="fa-download") Vegetarian/Vegan
                    a(href="img/Menu/pdf/2018/04/drinks.pdf" target="_blank" title="Download the Drinks Menu")
                      i.fa(class="fa-download") Drinks/Wine
                    a(href="img/Menu/pdf/2018/11/SundayLunch.pdf" target="_blank" title="Download the Sunday Lunch menu")
                      i.fa(class="fa-download") Sunday lunch
                    a(href="img/Menu/pdf/2017/05/Kids.pdf" target="_blank" title="Download the kids menu")
                      i.fa(class="fa-download") Kids
